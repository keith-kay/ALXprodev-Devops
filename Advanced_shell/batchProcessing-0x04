#!/bin/bash

POKEMONS=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")
API_URL="https://pokeapi.co/api/v2/pokemon"
ERROR_FILE="errors.txt"

> "$ERROR_FILE"

pids=()

for NAME in "${POKEMONS[@]}"; do
    (
        OUTFILE="${NAME}.json"
        curl -s -f "${API_URL}/${NAME}" -o "$OUTFILE" 2>>"$ERROR_FILE"
        if [ $? -ne 0 ]; then
            echo "Failed to fetch data for $NAME at $(date)" >> "$ERROR_FILE"
        fi
    ) &
    pids+=($!)
done

# Wait for all background processes and handle any that may need to be killed
for pid in "${pids[@]}"; do
    wait "$pid" || kill "$pid" 2>/dev/null
done

echo "All Pok√©mon